<div class="container mt-5">
    <div class="row justify-content-center form-mt">
        <div class="col-md-4 order-md-2 mb-4 bg-white shadow-lg bg-white rounded">
            <form class="form-signin mb-4">
                <div class="text-center mb-4">
                    <img class="mb-4" src="/img/logo.png" alt="" width="100" height="100">
                    <h1 class="h3 mb-3 font-weight-normal">Register</h1>
                </div>

                <div class="form-label-group mb-2">
                    <label for="inputEmail">Username</label>
                    <input type="text" name="username" class="form-control" placeholder="Usename" required autofocus>
                </div>

                <div class="form-label-group mb-2">
                    <label for="inputEmail">Email address</label>
                    <input type="email" name="email" class="form-control" placeholder="Email address" required
                        autofocus>
                </div>

                <div class="form-label-group mb-2">
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" class="form-control" placeholder="Password" required>
                </div>

                <div class="form-label-group mb-2">
                    <label for="inputPassword">Confirm password</label>
                    <input type="password" name="password" class="form-control" placeholder="Password" required>
                </div>

                <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
            </form>
        </div>
    </div>
</div>