<div class="row justify-content-center form-mt">
    <div class="col-md-4 order-md-2 mb-4 bg-white shadow-lg bg-white rounded">
        <form method="post" action="/users/register" class="form-signin mb-4">
            <div class="text-center mb-4">
                <img class="mb-4" src="/img/logo.png" alt="" width="100" height="100">
                <h1 class="h3 mb-3 font-weight-normal">Register</h1>
            </div>
            {{#if errors}}
            {{#each errors}}
            {{> form-msg prefix=../prefix msg=msg class="alert-danger"}}
            {{/each}}
            {{/if}}

            {{> input-field prefix=../prefix name="username" label="Username" type="text" placeholder="Username"}}
            {{> input-field prefix=../prefix name="email" label="Email address" type="email" placeholder="Email
            address"}}
            {{> input-field prefix=../prefix name="password" label="Password" type="password" placeholder="Password"}}
            {{> input-field prefix=../prefix name="password2" label="Confirm password" type="password"
            placeholder="Repeat Password"}}

            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
        </form>
    </div>
</div>