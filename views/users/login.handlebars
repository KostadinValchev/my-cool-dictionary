<div class="row justify-content-center form-mt">
    <div class="col-md-4 order-md-2 mb-4 bg-white shadow-lg bg-white rounded">
        {{#if errors}}
        {{#each errors}}
        {{> form-msg prefix=../prefix msg=msg class="alert-danger"}}
        {{/each}}
        {{/if}}
        <form method="post" action="/users/login" class="form-signin mb-4">
            <div class="text-center mb-4">
                <img class="mb-4" src="/img/logo.png" alt="" width="100" height="100">
                <h1 class="h3 mb-3 font-weight-normal">Login</h1>
            </div>

            {{> input-field prefix=../prefix name="email" label="Email" type="email" placeholder="Email"}}
            {{> input-field prefix=../prefix name="password" label="Password" type="password" placeholder="Password"}}

            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
        </form>
    </div>
</div>

{{success_msg}}