<!-- Counters container -->

<div class="container" id="counters-container">
    <h1>Current status</h1>
    <div class="row">
        <div class="col" id="success-span-container">
            <span class="badge badge-pill badge-success custom-box-shadow">Success</span> <span
                id="success-span">5</span>
        </div>
        <div class="col" id="falure-span-container">
            <span class="badge badge-pill badge-danger custom-box-shadow">Falure</span> <span id="falure-span">2</span>
        </div>
        <div class="col" id="hint-span-container">
            <span class="badge badge-pill badge-warning custom-box-shadow">Hints</span> <span id="hints-span">1</span>
        </div>
    </div>
</div>

<!-- Suggestions container -->
<div class="container" id="suggestions-container">
    <div class="row justify-content-md-center">
        <div class="card">

            <div class="card-body" id="guess-word">
                Word...
            </div>

            <!-- Alerts -->

            <div class="alert alert-success hidden" role="alert" id="success">
                Success
            </div>

            <div class="alert alert-danger hidden" role="alert" id="failure">
                Ops wrong answer
            </div>

            <!-- Alerts ends -->

            <div class="col-md-auto">
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <button class="btn btn-outline-secondary" type="button" id="check-button">Check</button>
                    </div>
                    <input type="text" class="form-control" placeholder="" id="answer-input"
                        aria-label="Example text with button addon" aria-describedby="button-addon1">
                </div>
            </div>

        </div>
    </div>
    <div class="row justify-content-md-center" id="help-buttons-container">
        <button type="button" class="btn btn-warning" id="hint-button">Hint</button>
        <button type="button" class="btn btn-info" id="next-button">Next</button>
        <button type="button" class="btn btn-secondary" data-toggle="modal"
            data-target="#exampleModalLong">Finish</button>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Attention</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                "Are you sure you want to finish competition?"
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="finish-button">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div id="words-collection" style="display: none;">{{words}}</div>
<script src="/js/retrieve-words.js"></script>
<script src="/js/playground-engine.js"></script>