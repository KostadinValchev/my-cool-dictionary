<div class="row justify-content-center form-mt">
    <div class="col-md-4 order-md-2 mb-4 bg-white shadow-lg bg-white rounded">
        {{#if errors}}
        {{#each errors}}
        {{> form-msg prefix=../prefix msg=msg class="alert-danger"}}
        {{/each}}
        {{/if}}
        <form method="post" action="/words/setup-competition" class="form-signin mb-4">
            <div class="text-center mb-4">
                <img class="mb-4" src="/img/logo.png" alt="" width="100" height="100">
                <h1 class="h3 mb-3 font-weight-normal">Type Of Exercise</h1>
            </div>

            <div class="form-group">
                <label for="type-exercise">Choose one</label>
                <select class="form-control" id="type-exercise">
                    <option>Practice all the words</option>
                    <option>Practice daily</option>
                    <option>Practice weekly</option>
                    <option>Practice the most wrong</option>
                </select>
            </div>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Start Exercise</button>
        </form>
    </div>
</div>